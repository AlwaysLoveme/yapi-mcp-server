{
  "name": "@zhuxian/yapi-mcp-server",
  "version": "0.0.1",
  "description": "MCP server for reading YAPI API documentation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "yapi-mcp-server": "./dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md",
    "README.zh-CN.md"
  ],
  "scripts": {
    "build": "swc src -d dist --strip-leading-paths && tsc --emitDeclarationOnly",
    "build:swc": "swc src -d dist --strip-leading-paths",
    "build:tsc": "tsc",
    "typecheck": "tsc --noEmit",
    "watch": "swc src -d dist --strip-leading-paths -w",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AlwaysLoveme/yapi-mcp-server.git"
  },
  "homepage": "https://github.com/AlwaysLoveme/yapi-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/AlwaysLoveme/yapi-mcp-server/issues"
  },
  "author": "zhuxian",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.7.10",
    "@swc/core": "^1.15.11",
    "@types/node": "^22.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0"
  },
  "keywords": [
    "mcp",
    "yapi",
    "api-documentation",
    "model-context-protocol",
    "cursor",
    "claude"
  ],
  "license": "MIT"
}
